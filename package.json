{
  "name": "fyndiq-ui-build",
  "private": true,
  "author": "Thibaut REMY <thibaut.remy@fyndiq.com>",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "publish": "npm run build && lerna publish",
    "build": "./scripts/build.sh",
    "dev": "./scripts/build.sh dev",
    "lint": "npm run lint:js && npm run lint:less",
    "lint:js": "eslint --cache --ignore-pattern coverage --ignore-pattern node_modules --ignore-pattern lib .",
    "lint:less": "stylelint --syntax less \"packages/**/*.less\"",
    "jest": "jest",
    "test": "npm run jest && npm run lint"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-core": "^6.24.0",
    "babel-eslint": "^7.2.1",
    "babel-jest": "^19.0.0",
    "babel-preset-es2015": "^6.24.0",
    "babel-preset-react": "^6.23.0",
    "babel-preset-stage-0": "^6.22.0",
    "enzyme": "^2.8.0",
    "enzyme-to-json": "^1.5.0",
    "eslint": "^3.18.0",
    "eslint-config-fyndiq": "0.0.1",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^4.0.0",
    "eslint-plugin-react": "^6.10.3",
    "file-loader": "^0.10.1",
    "jest": "^19.0.2",
    "lerna": "2.0.0-beta.38",
    "react": "^15.4.2",
    "react-addons-test-utils": "^15.4.2",
    "react-dom": "^15.4.2"
  },
  "dependencies": {
    "css-loader": "^0.27.3",
    "less": "^2.7.2",
    "less-loader": "^3.0.0",
    "style-loader": "^0.16.1",
    "stylelint": "^7.10.1",
    "stylelint-config-standard": "^16.0.0"
  },
  "jest": {
    "snapshotSerializers": ["enzyme-to-json/serializer"],
    "moduleNameMapper": {
      "\\.less$": "<rootDir>/scripts/less-mock.js"
    }
  }
}
